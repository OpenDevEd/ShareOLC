<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutAboutMenuHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:visibility="gone"
    android:orientation="vertical"
    android:background="@drawable/background_about">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/btnCloseAboutMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:clickable="true"
            android:tint="@color/colorBlack"
            android:focusable="true"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_close_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="@string/about"
            android:textColor="@color/colorBlack"
            android:textSize="26sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_data1"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textSize="22sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_data2"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorBlack"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_data3"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="24dp"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_data4"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="16dp"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_data5"
                android:layout_marginTop="24dp"
                android:textColor="@color/colorBlack"
                android:textSize="22sp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>