<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <RelativeLayout
        android:id="@+id/layoutTopHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:padding="4dp">


        <include
            layout="@layout/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />


        <include
            layout="@layout/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true" />


        <include
            layout="@layout/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutTopHome">

        <include layout="@layout/layout_permission_home" />

        <include layout="@layout/layout_main_home" />

    </RelativeLayout>


    <include layout="@layout/layout_drop_down_menu" />

    <include layout="@layout/layout_about_menu" />

</RelativeLayout>